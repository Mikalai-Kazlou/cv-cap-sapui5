<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <List items="{path: 'mockdata>/SkillGroups'}">
    <CustomListItem>
      <VBox class="sapUiTinyMarginTopBottom">
        <Label text="{mockdata>title}"
          design="Bold"/>

        <Table items="{path: 'mockdata>skills'}">
          <columns>
            <Column width="auto"/>
            <Column width="10%"/>
            <Column width="10%"/>
            <Column width="10%"/>
          </columns>
          <items>
            <ColumnListItem vAlign="Middle">
              <cells>
                <Text text="{mockdata>title}" />
                <core:Icon src="sap-icon://accept"
                  visible="{= %{mockdata>level} === 1 }"/>
                <core:Icon src="sap-icon://accept"
                  visible="{= %{mockdata>level} === 2 }"/>
                <core:Icon src="sap-icon://accept"
                  visible="{= %{mockdata>level} === 3 }"/>
              </cells>
            </ColumnListItem>
          </items>
        </Table>

      </VBox>
    </CustomListItem>
  </List>
</core:FragmentDefinition>  
